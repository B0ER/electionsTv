<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_enabled="false">
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
      <solid android:color="@color/colorTransparentGray"/>
      <corners android:radius="10dp"/>
    </shape>
  </item>

  <item android:state_pressed="false">
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
      <solid android:color="@color/colorBlue"/>
      <corners android:radius="10dp"/>
    </shape>
  </item>

  <item android:state_pressed="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
      <solid android:color="@color/colorTransparentBlue"/>
      <corners android:radius="10dp"/>
    </shape>
  </item>

  <item android:state_focused="true" android:drawable="@color/colorBlack"/> <!-- focused -->

  <item android:state_hovered="true" android:drawable="@color/colorWhite"/> <!-- hovered -->

</selector>