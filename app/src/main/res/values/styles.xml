<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="customText">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_toolbar</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="custom_blue_button">
        <item name="android:background">@drawable/custom_button_selector</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/blue_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/blue_button_drawable_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/blue_button_padding</item>
    </style>
</resources>
